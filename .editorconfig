root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Source code specific rules
[*.{css,js,mjs,rs,ts}]
max_line_length = 120

# NPM manifest rules
[{package,package-lock}.json]
indent_size = 2

# Cargo manifest rules
[Cargo.lock]
indent_size = 1
